<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.bolara.uno_client.controller.RegisterUIController"
      spacing="15" alignment="CENTER">
    <Label text="Register" style="-fx-font-size: 20px;"/>

    <TextField fx:id="usernameField" promptText="Username" />
    <PasswordField fx:id="passwordField" promptText="Password" />
    <TextField fx:id="emailField" promptText="Email" />
    <TextField fx:id="reminderField" promptText="Password Reminder (optional)" />

    <Button text="Register" styleClass="button-type1" onAction="#handleRegister"/>
    <Label fx:id="statusLabel" textFill="red"/>

    <Button text="Back to Login" styleClass="button-type1" onAction="#openLogin"/>
</VBox>
