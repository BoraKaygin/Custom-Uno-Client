<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.bolara.uno_client.controller.RegisterController"
      spacing="15" alignment="CENTER">
    <Label text="Register" style="-fx-font-size: 20px;"/>

    <TextField fx:id="usernameField" promptText="Username" maxWidth="300"/>
    <PasswordField fx:id="passwordField" promptText="Password" maxWidth="300"/>
    <TextField fx:id="emailField" promptText="Email" maxWidth="300"/>
    <TextField fx:id="reminderField" promptText="Password Reminder (optional)" maxWidth="300"/>

    <Button text="Register" onAction="#handleRegister"/>
    <Label fx:id="statusLabel" textFill="red"/>

    <Button text="Back to Login" onAction="#openLogin"/>
</VBox>
