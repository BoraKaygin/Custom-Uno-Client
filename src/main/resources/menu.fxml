<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.bolara.uno_client.controller.MenuController"
           stylesheets="@/css/styles.css"
           styleClass="login-and-menu-background">
    <VBox spacing="20" alignment="CENTER">

        <Label text="Welcome to UNO!" style="-fx-font-size: 24px;" />

        <Button text="Create Game" onAction="#handleCreateGame" styleClass="button-type1" />
        <Button text="Leaderboard" onAction="#handleLeaderboard" styleClass="button-type2" />
        <Button text="Logout" onAction="#handleLogout" styleClass="button-type3" />
        <Label fx:id="statusLabel" textFill="#2b2736" style="-fx-font-size: 16px;"/>
</VBox>
</StackPane>