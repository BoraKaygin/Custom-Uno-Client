<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.bolara.uno_client.controller.LobbyUIController" spacing="10" alignment="CENTER" style="-fx-padding: 20;">
    <Text text="Lobby Created!" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <Text fx:id="lobbyCodeText" text="Lobby Code: ..." />

    <ListView fx:id="playerListView" prefHeight="200" prefWidth="300" maxWidth="500" VBox.vgrow="NEVER"/>

    <Button text="Start Game" styleClass="button-type5" onAction="#onStartGameClicked" />
    <Button text="Back to Menu" styleClass="button-type3" onAction="#onBackToMenuClicked" />
</VBox>
