<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.bolara.uno_client.controller.PasswordReminderUIController"
      spacing="15" alignment="CENTER">
    <Label text="Password Reminder" style="-fx-font-size: 20px;"/>

    <TextField fx:id="emailField" promptText="Enter your email"/>
    <Button text="Get Reminder" styleClass="button-type2" onAction="#handleGetReminder"/>

    <Label fx:id="reminderLabel" style="-fx-text-fill: green;"/>
    <Label fx:id="statusLabel" textFill="red"/>

    <Button text="Back to Login" styleClass="button-type1" onAction="#openLogin"/>
</VBox>
